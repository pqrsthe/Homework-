#include <bits/stdc++.h>

using namespace std;
const int nm = 2e5 + 9;
//#define int long long
int ans = 0;
int l[nm],r[nm], pre[nm]; 
map <int,int> mp;

signed main (){
	int mx = 0; 
	int n; cin >> n; 
	for (int i = 1; i <= n; i++){
		cin >> l[i] >> r[i];
//		mx = max(mx , r[i]); 
		mp[l[i]]++; mp[r[i]]--; 
	}	
	int cnt = 0; 
	for (auto i : mp){
		cnt++; pre[cnt] += i.second + pre[cnt - 1]; 
		ans = max(ans , pre[cnt]); 
	}
	cout << ans; 
	return 0;
}
