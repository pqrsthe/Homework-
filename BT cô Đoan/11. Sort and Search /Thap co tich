#include <bits/stdc++.h>
using namespace std;

#define el '\n'
#define ll long long
#define st first
#define nd second
#define pii pair<int,int>
#define psi pair<string,int>

const long long INF = 1e15;
const int nm = 1e6 + 9;
const int N = 1e3 + 9;
const int MOD = 1e9 + 7;
int a[nm];
void solve(){
	int n; cin >> n;
	for (int i = 1; i <= n; i++){
		cin >> a[i]; 
	}
	sort (a + 1, a + 1 + n, greater<int>()); 
	int hei = 1 + a[1];
	for (int i = 2; i <= n; i++){
		hei = min(hei, i + a[i]);
		if (hei == i) {
			break; 
		}
	}
	cout << min(hei , n);
}

signed main (){
	int t; t = 1;
	while (t--){
		solve();
	}
	return 0;
}
