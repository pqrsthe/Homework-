#include <bits/stdc++.h>
using namespace std;

#define el '\n'
#define ll long long
#define st first
#define nd second
#define pii pair<int,int>
#define psi pair<string,int>

const long long INF = 1e15;
const int nm = 2e5 + 9;
const int N = 1e3 + 9;
const int MOD = 1e9 + 7;
pii t[nm];
bool cmp(pii a, pii b){
	return a.nd < b.nd; 
}

void solve(){
	int n; cin >> n;
	for (int i= 1; i <= n; i++){
		cin >> t[i].st >> t[i].nd; 
	}
	sort (t + 1, t + 1 + n, cmp);
	int dem = 0, last = -1; 
	for (int i = 1; i <= n; i++){
		if (last <= t[i].st){
			dem++; last = t[i].nd; 
		}
	}
	cout << dem; 
}

signed main (){
	int t; t = 1;
	while (t--){
		solve();
	}
	return 0;
}
