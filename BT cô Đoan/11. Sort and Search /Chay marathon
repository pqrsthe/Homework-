#include <bits/stdc++.h>

using namespace std;
const int nm = 1e6 + 9;
#define int long long
int a[nm],ans = 0;
pair <int,int> p[nm]; 
bool cmp(pair<int,int> a, pair<int,int> b){
	if (a.first == b.first) return a.second < b.second; 
	return a.first < b.first; 
}


int thoidiem = 0; 
signed main (){
	int n; cin >> n; 
	for (int i = 1; i <= n; ++i){
		cin >> p[i].first >> p[i].second; 
	}
	sort (p + 1, p + 1 + n, cmp);
	for (int i = 1; i <= n; i++){
		if (thoidiem > p[i].first) thoidiem += p[i].second; 
		else thoidiem = p[i].first + p[i].second;  
	}
	cout << thoidiem; 
	return 0;
}
