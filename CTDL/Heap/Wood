#include <bits/stdc++.h>

using namespace std;

#define int long long
#define el '\n'
#define st first
#define nd second

const int nm = 1e6 + 9;
const long long INF = 1e18;
const int MOD = 1e9 + 7;
const int N = 2e3 + 9;
int a[nm]; 
// 1 4 5 7 
// 17 -> 10 + 7; 10 -> 5 + 5; 5 -> 4 1 -> 17 + 10 + 5 
void solve(){
	priority_queue<int,vector<int>,greater<int>> pq; 
	int n; cin >> n;
	for (int i = 1; i <= n; i++){
		cin >> a[i]; pq.push(a[i]);  
	}
	int sum = 0;
	while (pq.size() > 1){
		int fi = pq.top(); pq.pop(); 
		int se = pq.top(); pq.pop(); 
//		cout << fi << " " << se << endl; 
		pq.push(fi + se); 
		sum += (fi + se); 
	}
	cout << sum << el; 
}

signed main (){
	int t; cin >> t; 
	while (t--){
		solve();
	}
	return 0;
}
